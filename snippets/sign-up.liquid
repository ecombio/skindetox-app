<div id="sign-up" class="sign-up-form" style="display: none;">
  <h2>Sign Up to SCOOTERBIO</h2>
  {% form 'create_customer', class: 'customer-register-form' %}
    {% if form.errors %}
        <ul class="error error-list">
          {% for field in form.errors %}
              <li>
                  {% if field == 'form' %}
                      {{ form.errors.messages[field] }}
                  {% else %}
                    <a href="#SignUpForm-{{ field }}" class="link link-underline">
                      <span class="text">
                          {{ form.errors.translated_fields[field] | capitalize }}
                          {{ form.errors.messages[field] }}
                      </span>
                    </a>
                  {% endif %}
              </li>
          {% endfor %}
      </ul>
    {% endif %}
    <div class="form-group">
        <input 
          type="text" 
          id="first-name" 
          placeholder="First name" 
          name="customer[first_name]"
          required
        >
        <label for="first-name">{{ 'customer.register.first_name' | t }}<span class="required">*</span></label>
    </div>
    <div class="form-group">
        <input 
          type="text" 
          id="last-name" 
          placeholder="Last name" 
          name="customer[last_name]"
          required
        >
        <label for="last-name">{{ 'customer.register.last_name' | t }}<span class="required">*</span></label>
    </div>
    <div class="form-group">
        <input 
          type="email" 
          id="email" 
          placeholder="Email address" 
          name="customer[email]"
          required 
        >
        <label for="email">{{ 'customer.register.email' | t }}<span class="required">*</span></label>
    </div>
    <div class="form-group">
        <input 
          type="password" 
          id="password" 
          placeholder="Password" 
          name="customer[password]"
          required 
        >
        <label for="password">{{ 'customer.register.password' | t }}<span class="required">*</span></label>
    </div>

    <div class="submit mt-30 d-flex flex-column">
        <input class="btn-primary w-full text-center" type="submit" value="{{ 'customer.register.submit' | t }}">
        <div class="mt-20">Already have an account? 
          <a href="#" class="link link-underline" onclick="openSignIn()">Sign In</a>
        </div>
    </div>
  {% endform %}
</div>
