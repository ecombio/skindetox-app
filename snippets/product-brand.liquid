{% if product.metafields.custom.brand.name or product.metafields.custom.brand.description %}
  <div class="main-product-brand">
    {% if product.metafields.custom.brand.name %}
      <h2>{{ product.metafields.custom.brand.name | metafield_tag }}</h2>
    {% endif %}
    
    {% if product.metafields.custom.brand.description %}
      <p>{{ product.metafields.custom.brand.description | metafield_tag }}</p>
    {% endif %}
  </div>
{% endif %}

<style>
  .main-product-brand {
    border: solid 1px #f0f0f0;
    border-radius: 30px;
    padding: 30px;
    height: min-content;
    width: auto;
  }
</style>
