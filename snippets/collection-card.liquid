<div class="collection-card" style="background-color: rgba(0, 0, 0, 0.5); padding: 10px; border-radius: 50px; max-width: 280px;">
    <div style="display: flex; align-items: center; overflow: hidden;">
        <div style="margin-right: 10px;">
            <a href="{{ collection.url }}">
                <img src="{{ collection.image | img_url: 'medium' }}" alt="{{ collection.title }}" style="border-radius: 50%; width: 50px; height: 50px;">
            </a>
        </div>
        <div style="flex: 1; color: #fff; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
            <a href="{{ collection.url }}" style="color: #fff; margin-bottom: 0;">{{ collection.title }}</a>
<div style="overflow: hidden; white-space: nowrap;">
  <div style="display: inline-block; padding-left: 100%; animation: slide 28s linear infinite;">
    <p style="margin: 0; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{ collection.description }}</p>
  </div>
</div>

<style>
  @keyframes slide {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>
        </div>
    </div>
</div>
<style>
  p:not(:only-of-type) {
    margin-bottom: 0rem;
}
</style>
