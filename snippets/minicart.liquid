  <cart-notification>
    <div id="bls-header_minicart" class="header_minicart">
      <a
        id="cart-icon-bubble"
        href="{{ routes.cart_url }}"
        class="{% if template != 'cart' %}bls-minicart-action{% endif %} bls_tooltip"
      >
