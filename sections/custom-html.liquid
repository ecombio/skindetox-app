{% liquid
  assign st = section.settings
  assign container = st.container
  assign text_align = st.text_alignment
  assign heading = st.heading
  assign subheading =  st.subheading
  assign content_html = st.content_html
  assign color_scheme = st.color_scheme
  assign heading_logo = st.heading_logo
  assign heading_logo_svg = st.heading_logo_svg
  assign description = st.description
  assign enabled_animations = settings.animations_enabled
  assign spt_tablet = ''
  if st.padding_top > 50
    assign spt_tablet = ' spt-tablet'
  endif
  assign spt_mobile = ''
  if st.padding_top > 30
    assign spt_mobile = ' spt-mobile'
  endif
  assign spb_tablet = ''
  if st.padding_bottom > 50
    assign spb_tablet = ' spb-tablet'
  endif
  assign spb_mobile = ''
  if st.padding_bottom > 30
    assign spb_mobile = ' spb-mobile'
  endif
  assign reset_spacing = ''
  if st.reset_spacing
    assign reset_spacing = ' remove_spacing'
  endif
  assign has_bg = ''
  if bg_color != blank
    assign has_bg = ' has-bg'
  endif
%}
{%- capture style -%}
  --section-padding-top: {{ st.padding_top }}px; --section-padding-bottom: {{ st.padding_bottom }}px;
{%- endcapture -%}
<section
  class="bls__section color-{{ color_scheme }} gradient {{ has_bg }}{{ spt_tablet }}{{ spb_tablet }}{{ spt_mobile }}{{ spb_mobile }} bls__custom-html {{ reset_spacing }}"
  style="{{ style | strip | strip_newlines }}"
>
  <div class="{{ container }} section-full {% if enabled_animations %}scroll-trigger animate--slide-in{% endif %}">
    {%- if heading != blank or description != blank or heading_logo != blank or heading_logo_svg != blank -%}
      <div class="bls__section-header {{ text_align }}">
        {%- if heading_logo_svg != blank -%}
          <div class="bls__section-logo bls__section-logo-svg">
            {{ heading_logo_svg }}
          </div>
        {%- elsif heading_logo != blank -%}
          <div class="bls__section-logo">
            <img
              srcset="
                {%- if heading_logo.width >= 165 -%}{{ heading_logo | image_url: width: 165 }} 165w,{%- endif -%}
                {%- if heading_logo.width >= 360 -%}{{ heading_logo | image_url: width: 360 }} 360w,{%- endif -%}
                {%- if heading_logo.width >= 533 -%}{{ heading_logo | image_url: width: 533 }} 533w,{%- endif -%}
                {%- if heading_logo.width >= 720 -%}{{ heading_logo | image_url: width: 720 }} 720w,{%- endif -%}
                {%- if heading_logo.width >= 940 -%}{{ heading_logo | image_url: width: 940 }} 940w,{%- endif -%}
                {%- if heading_logo.width >= 1066 -%}{{ heading_logo | image_url: width: 1066 }} 1066w,{%- endif -%}
                {{ heading_logo | image_url }} {{ heading_logo.width }}w
              "
              src="{{ heading_logo | image_url: width: 533 }}"
              alt="{{ heading_logo.alt | escape }}"
              class="motion-reduce"
              loading="lazy"
              width="{{ heading_logo.width }}"
              height="{{ heading_logo.height }}"
            >
          </div>
        {%- endif -%}
        {% if subheading != blank %}
          <p
            class="bls__section-subheading mb-5 {% if enabled_animations %}scroll-trigger animate--slide-in{% endif %}"
          >
            {{ subheading }}
          </p>
        {% endif %}
        {%- if heading != blank -%}
          <h2 class="bls__section-heading mb-5">{{ heading }}</h2>
        {%- endif -%}
        {%- if description != blank -%}
          <div class="bls__section-des">
            {{ description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    {{ content_html }}
  </div>
</section>
{% schema %}
{
  "name": "t:sections.custom-html.name",
  "disabled_on": {
    "groups": ["header", "footer", "custom.overlay"]
  },
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.section_header.title_header"
    },
    {
      "type": "image_picker",
      "id": "heading_logo",
      "label": "t:sections.all.section_header.heading_logo"
    },
    {
      "type": "text",
      "id": "heading_logo_svg",
      "label": "t:sections.all.section_header.heading_logo_svg",
      "info": "t:sections.all.section_header.info_logo_svg"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "t:sections.all.section_header.subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.all.section_header.heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.all.section_header.description",
      "default": "<p></p>"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "t:sections.all.horizontal_alignment.text_alignment",
      "default": "text-center",
      "options": [
        {
          "value": "text-left",
          "label": "t:sections.all.horizontal_alignment.options__1.label"
        },
        {
          "value": "text-center",
          "label": "t:sections.all.horizontal_alignment.options__2.label"
        },
        {
          "value": "text-right",
          "label": "t:sections.all.horizontal_alignment.options__3.label"
        }
      ]
    },
    {
      "type": "header",
      "content": "t:sections.all.header.general"
    },
    {
      "type": "select",
      "id": "container",
      "label": "t:sections.all.layout.label",
      "default": "container",
      "options": [
        {
          "value": "container",
          "label": "t:sections.all.layout.options__1.label"
        },
        {
          "value": "container-fluid",
          "label": "t:sections.all.layout.options__2.label"
        },

        {
          "value": "strecth-width",
          "label": "t:sections.all.layout.options__3.label"
        },
        {
          "value": "full-width",
          "label": "t:sections.all.layout.options__4.label"
        }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.header.content_option"
    },
    {
      "type": "paragraph",
      "content": "t:sections.custom-html.settings.paragraph.content"
    },
    {
      "type": "html",
      "id": "content_html",
      "label": "t:sections.all.header.content",
      "default": "<div class=\"text-center py-10 px-15 border\" style=\"color: #111;\">This is Custom HTML section</div>"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "t:sections.all.padding.padding_top",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0,
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "reset_spacing",
      "label": "t:sections.all.reset_spacing.label",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom-html.name",
      "category": "Homepage"
    }
  ]
}
{% endschema %}
