{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  sub_heading_font | font_face: font_display: 'swap' }}
  {{  load_font | font_face: font_display: 'swap' }}
  {{  popup_title_font | font_face: font_display: 'swap' }}
  {{  popup_text_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .gallery-heading-{{ section.id }} {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    text-align: {{ heading_align }};
  }

  .gallery-subheading-{{ section.id }} {
     margin-top: {{ sub_heading_mt | times: 0.75 | round: 0 }}px;
     text-align: {{ sub_heading_align }};
   }

  .gallery-subheading-{{ section.id }} > * {
    margin: 0;
    font-size: {{ sub_heading_size_mobile }}px;
    color: {{ sub_heading_color }};
    line-height: {{ sub_heading_height }}%;
    text-transform: unset;
  }

  .gallery-items-{{ section.id }} {
    margin-top: {{ items_mt | times: 0.75 | round: 0 }}px;
    opacity: 1;
    transition: all 0.25s ease 0s;
    pointer-evetns: all;
  }

  .gallery-items-{{ section.id }}.gallery-items-hide-{{ section.id }} {
    opacity: 0;
    transition: all 0.25s ease 0s;
    pointer-evetns: none;
  }

  .gallery-item-{{ section.id }} {
    padding: {{ items_gap_mobile | times: 0.5 }}px;
    width: calc(100% / {{ items_row_mobile }});
    max-width: calc(100% / {{ items_row_mobile }});
    -webkit-backface-visibility: hidden;
    -webkit-transform: translate3d(0,0,0);
  }

  .gallery-item-{{ section.id }} img,
  .gallery-item-{{ section.id }} svg {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    border-radius: {{ image_radius }}px;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
  }

  .gallery-item-{{ section.id }} svg {
    background-color: #CFCFCF;
  }

  .gallery-item-{{ section.id }}.item-hidden-{{ section.id }} {
    display: none;
  }

  .gallery-load-{{ section.id }} {
    margin-top: {{ load_mt | times: 0.75 | round: 0 }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 10px;
    max-width: fit-content;
    font-size: {{ load_size_mobile }}px;
    color: {{ load_color }};
    line-height: {{ load_height }}%;
    text-transform: unset;
    text-align: {{ load_align }};
    cursor: pointer;
    transition: all 0.25s ease 0s;
  }

  .gallery-load-{{ section.id }}.load-hidden-{{ section.id }} {
    display: none;
  }

  .gallery-load-{{ section.id }}:hover {
    transition: all 0.25s ease 0s;
    color: {{ load_hover_color }};
  }

  .gallery-load-{{ section.id }} svg {
    transform: rotate(90deg);
  }

  .gallery-load-{{ section.id }} svg path {
    transition: all 0.25s ease 0s;
    fill: {{ load_color }};
  }

  .gallery-load-{{ section.id }}:hover svg path {
    transition: all 0.25s ease 0s;
    fill: {{ load_hover_color }};
  }

  .gallery-modal-{{ section.id }} {
    width: 100vw;
    height: 100vh;
    top: 0;
    left: 0;
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    overflow-y: scroll;
    pointer-events: none;
    background: rgba(0, 0, 0, {{ modal_overlay | times: 0.01 }});
    padding: 10px;
  }

  .gallery-modal-{{ section.id }}.active {
    opacity: 1;
    z-index: 100;
    pointer-events: all;
    transition: all 250ms ease-in 0s;
  }

  .gallery-modal-inner-{{ section.id }} {
    padding: {{ modal_padding_vertical_mobile }}px {{ modal_padding_horizontal_mobile }}px;
    position: relative;
    width: 100%;
    max-height: 96vh;
    border: {{ modal_border_thickness }}px solid {{ modal_border_color }};
    border-radius: {{ modal_radius }}px;
    background-color: {{ modal_bg_color }};
    overflow: hidden;
  }

  .gallery-close-{{ section.id }} {
    position: absolute;;
    top: 10px;
    right: 8px;
    box-shadow: none;
    background-color: transparent;
    border: 0px;
    cursor: pointer;
    z-index: 2;
  }

  .gallery-close-{{ section.id }} svg {
    display: block;
    width: 30px;
    height: 30px;
  }

  .gallery-close-{{ section.id }} svg path {
    fill: {{ close_color }};
  }

  .gallery-toggle-item-{{ section.id }} {
    cursor: pointer;
  }

  .gallery-modal-inner-{{ section.id }} img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .gallery-modal-title-{{ section.id }} {
    text-align: {{ modal_content_align_mobile }};
  }

   .gallery-modal-title-{{ section.id }} * {
      margin: 0;
      font-size: {{ popup_title_size_mobile }}px;
      color: {{ popup_title_color }};
      line-height: {{ popup_title_height }}%;
      text-transform: unset
   }

  .gallery-modal-text-{{ section.id }} {
    margin-top: {{ popup_text_mt | times: 0.75 | round: 0 }}px;
    text-align: {{ modal_content_align_mobile }};
  }

   .gallery-modal-text-{{ section.id }} * {
      margin: 0;
      font-size: {{ popup_text_size_mobile }}px;
      color: {{ popup_text_color }};
      line-height: {{ popup_text_height }}%;
      text-transform: unset
   }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .gallery-heading-{{ section.id }} {
      font-size: {{ heading_size }}px;
    }

    .gallery-subheading-{{ section.id }} {
      margin-top: {{ sub_heading_mt }}px;
    }

    .gallery-subheading-{{ section.id }} > * {
      font-size: {{ sub_heading_size }}px;
    }

    .gallery-items-{{ section.id }} {
      margin-top: {{ items_mt }}px;
    }

    .gallery-item-{{ section.id }} {
      padding: {{ items_gap | times: 0.5 }}px;
      width: calc(100% / {{ items_row }});
      max-width: calc(100% / {{ items_row }});
    }

    .gallery-load-{{ section.id }} {
      margin-top: {{ load_mt }}px;
      font-size: {{ load_size }}px;
    }

    .gallery-modal-inner-{{ section.id }} {
      max-width: {{ modal_width }}%;
      padding: {{ modal_padding_vertical }}px {{ modal_padding_horizontal }}px;
    }

    .gallery-modal-title-{{ section.id }} {
      text-align: {{ modal_content_align }};
    }

   .gallery-modal-title-{{ section.id }} * {
      font-size: {{ popup_title_size }}px;
   }

   .gallery-modal-text-{{ section.id }} {
      margin-top: {{ popup_text_mt }}px;
      text-align: {{ modal_content_align }};
    }

   .gallery-modal-text-{{ section.id }} * {
      font-size: {{ popup_text_size }}px;
   }
  }
  
{%- endstyle -%}

