<div class="section-{{ section.id }} gallery-{{ section.id }}" style="background-color:{{ background_color }}; background-image: {{ background_gradient }};">
    <div class="section-{{ section.id }}-settings ">
        {% if heading != blank %}
          <h2 class="gallery-heading-{{ section.id }}">{{ heading }}</h2>
        {% endif %}
        {% if sub_heading != blank %}
          <div class="gallery-subheading-{{ section.id }}">{{ sub_heading }}</div>
        {% endif %}
        <div class="gallery-items-{{ section.id }} preview gallery-items-hide-{{ section.id }}">
          {% for block in section.blocks %}
            <{% if block.settings.url != blank and block.settings.use_style == "link" %}a href="{{ block.settings.url }}"{% else %}div{% endif %} class="gallery-item-{{ section.id }} {% if items_style == "load" and forloop.index > initial_quality %}item-hidden-{{ section.id }}{% endif %} {% if block.settings.use_style == "popup" or block.settings.use_style == "lightbox" %}gallery-toggle-item-{{ section.id }}{% endif %}" id="{{ block.id }}">
              {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.image.alt }}" {% if lazy %}{% if items_style == "load" %}{% if forloop.index < initial_quality %}loading="lazy"{% endif %}{% else %}loading="lazy"{% endif %}{% endif %}>
              {% else %}
                {{ 'image' | placeholder_svg_tag }}
              {% endif %}
            </{% if block.settings.url != blank and block.settings.use_style == "link" %}a{% else %}div{% endif %}>
