    },
    {
      "type": "image_picker",
      "id": "lookbook_image",
      "label": "t:sections.shop-the-look.settings.lookbook_image.label"
    },
    {
      "type": "select",
      "id": "dot_type",
      "label": "t:sections.shop-the-look.settings.dot_type.label",
      "options": [
        {
          "value": "icon",
          "label": "t:sections.shop-the-look.settings.dot_type.options__1.label"
