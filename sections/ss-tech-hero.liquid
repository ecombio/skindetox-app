<style>
  .tech-hero {
    background: linear-gradient(
      93.9deg,
      var(--tl-color, #4222de) 0%,
      var(--br-color, #a931ee) 101.18%
    );
    display: flex;
    flex-direction: column;
    color: var(--font-color, #fff);
  }
  .tech-hero__button {
    all: unset;
    cursor: pointer;
    border: 1px solid var(--font-color, #fff);
    border-radius: 21px;
    color: var(--font-color, #fff);
    display: inline-block;
    font-size: 25px;
    padding: 1rem 3rem;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    margin: 40px auto 0;
    display: inline-block;
    width: fit-content;
  }
  .tech-hero__image--desktop {
    display: none;
  }
  @media screen and (min-width: 750px) {
    .tech-hero__button {
      margin: 28px 0 0;
    }
    .tech-hero {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
    .tech-hero__image--mobile {
      display: none;
    }
    .tech-hero__image--desktop {
      display: block;
    }
  }
  .tech-hero__left-content {
    padding: 2rem;
    display: flex;
    flex-direction: column;
  }
  .tech-hero__image {
    margin-top: 20px;
  }
  .tech-hero__title p {
    font-size: var(--title-font-size-mobile, 25px);
    line-height: 1.25;
    margin: 0;
  }
  @media screen and (min-width: 750px) {
    .tech-hero__left-content {
      padding: 100px;
      padding-right: 30px;
    }
    .tech-hero__image {
      width: 40%;
      margin-right: 40px;
    }
    .tech-hero__title p {
      font-size: var(--title-font-size, 40px);
    }
  }
</style>

<div
  class="tech-hero"
  style="
    --tl-color: {{ section.settings.tl_color }};
    --br-color: {{ section.settings.br_color }};
    --font-color: {{ section.settings.font_color }};
    --title-font-size: {{ section.settings.title_font_size }}px;
    --title-font-size-mobile: {{ section.settings.title_font_size_mobile }}px;
  "
>
  <div class="tech-hero__left-content">
    <div
      class="tech-hero__title"
    >
      {{ section.settings.title }}
    </div>

    {% comment %} Image: {% endcomment %}
    {% if section.settings.image != blank %}
      <img
        class="tech-hero__image tech-hero__image--mobile"
        src="{{ section.settings.image | img_url: '600x' }}"
        srcset="
          {{ section.settings.image | img_url: '400x' }} 400w,
          {{ section.settings.image | img_url: '600x' }} 600w,
          {{ section.settings.image | img_url: '1200x' }} 1200w,
          {{ section.settings.image | img_url: '1800x' }} 1800w,
          {{ section.settings.image | img_url: 'master' }} 2000w
        "
        alt="{{ section.settings.image.alt | escape }}"
      >
    {% endif %}

    {% if section.settings.button_text %}
      <a
        href="{{ section.settings.button_url }}"
        class="tech-hero__button"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}

    <style>
      .tech-hero__icon-wrapper {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        align-items: center;
        margin-top: 24px;
        font-size: 12px;
        gap: 10px;
      }
      .tech-hero__icon {
        display: flex;
        gap: 10px;
      }
      @media screen and (min-width: 750px) {
        .tech-hero__icon-wrapper {
          margin-top: 60px;
          font-size: 14px;
          justify-content: flex-start;
          gap: 20px 60px;
        }
      }
    </style>
    <div class="tech-hero__icon-wrapper">
      {% for block in section.blocks %}
        <div class="tech-hero__icon">
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | img_url: '25x' }}"
              srcset="
                {{ block.settings.image | img_url: '25x' }} 25w,
                {{ block.settings.image | img_url: '50x' }} 50w,
                {{ block.settings.image | img_url: '100x' }} 500w,
                {{ block.settings.image | img_url: '200x' }} 1000w,
                {{ block.settings.image | img_url: 'master' }} 2000w
              "
              alt="{{ block.settings.image.alt | escape }}"
              style="width: 25px; height: 25px;"
            >
          {% else %}
            {% comment %} Placeholder SVG: {% endcomment %}
            {% if forloop.index == 1 %}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                width="26"
                height="26"
                viewBox="0 0 26 26"
                fill="none"
                style="width: 25px; height: 25px;"
              >
                <rect x="0.890625" y="0.207031" width="25" height="25" fill="url(#pattern0)"/>
                <defs>
                <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                <use xlink:href="#image0_1141_4326" transform="scale(0.01)"/>
                </pattern>
                <image id="image0_1141_4326" width="100" height="100" xlink:href="data:image/png;base64,"/>
                </defs>
              </svg>
            {% elsif forloop.index == 2 %}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                width="26"
                height="26"
                viewBox="0 0 26 26"
                fill="none"
                style="width: 25px; height: 25px;"
              >
                <rect x="0.667969" y="0.207031" width="25" height="25" fill="url(#pattern0)"/>
                <defs>
                <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                <use xlink:href="#image0_1141_4330" transform="scale(0.0104167)"/>
                </pattern>
                <image id="image0_1141_4330" width="96" height="96" xlink:href="data:image/png;base64,"/>
                </defs>
              </svg>
            {% else %}
              <svg
                xmlns="http://www.w3.org/2000/svg"
                xmlns:xlink="http://www.w3.org/1999/xlink"
                width="26"
                height="26"
                viewBox="0 0 26 26"
                fill="none"
                style="width: 25px; height: 25px;"
              >
                <rect x="0.308594" y="0.207031" width="25" height="25" fill="url(#pattern0)"/>
                <defs>
                <pattern id="pattern0" patternContentUnits="objectBoundingBox" width="1" height="1">
                <use xlink:href="#image0_1141_4328" transform="scale(0.00961538)"/>
                </pattern>
                <image id="image0_1141_4328" width="104" height="104" xlink:href="data:image/png;base64,"/>
                </defs>
              </svg>
            {% endif %}
          {% endif %}

          <span class="tech-hero__icon-title">
            {{ block.settings.title }}
          </span>
        </div>
      {% endfor %}
    </div>
  </div>

  {% if section.settings.image != blank %}
    <img
      class="tech-hero__image tech-hero__image--desktop"
      src="{{ section.settings.image | img_url: '600x' }}"
      srcset="
        {{ section.settings.image | img_url: '400x' }} 400w,
        {{ section.settings.image | img_url: '600x' }} 600w,
        {{ section.settings.image | img_url: '1200x' }} 1200w,
        {{ section.settings.image | img_url: '1800x' }} 1800w,
        {{ section.settings.image | img_url: 'master' }} 2000w
      "
      alt="{{ section.settings.image.alt | escape }}"
    >
  {% endif %}
</div>

{% schema %}
{
  "name": "SS - Device hero",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p><strong>Sustainable</strong> electronics, trusted quality. We're refreshing the way you buy tech.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "tl_color",
      "label": "Top left color",
      "default": "#4222de"
    },
    {
      "type": "color",
      "id": "br_color",
      "label": "Bottom right color",
      "default": "#a931ee"
    },
    {
      "type": "color",
      "id": "font_color",
      "label": "Font color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "label": "Title font size",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 40,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "title_font_size_mobile",
      "label": "Title font size mobile",
      "min": 10,
      "max": 100,
      "step": 1,
      "default": 25,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "icon",
      "name": "Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "12 Month warranty"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SS - Device Hero",
      "blocks": [
        {
          "type": "icon",
          "settings": {
            "title": "12 Month warranty"
          }
        },
        {
          "type": "icon",
          "settings": {
            "title": "Certified vendor"
          }
        },
        {
          "type": "icon",
          "settings": {
            "title": "14 Day Money back"
          }
        }
      ]
    }
  ]
}
{% endschema %}
