  <div class="section-{{ section.id }}-padding">
    <div
      class="tech-social"
      style="
        --font-color: {{ section.settings.font_color }};
        --title-font-size: {{ section.settings.title_font_size }}px;
        --title-font-size-mobile: {{ section.settings.title_font_size_mobile }}px;
      "
    >
      <div
        class="tech-social__title"
      >
        {{ section.settings.title }}
      </div>

      {% if section.settings.button_text %}
        <a
          href="{{ section.settings.button_url }}"
          class="tech-social__button"
        >
          {{ section.settings.button_text }}
        </a>
      {% endif %}

      <style>
        .tech-social__icon-wrapper {
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
          align-items: center;
          margin-top: 30px;
          font-size: 12px;
          gap: 15px;
        }
        .tech-social__icon {
          display: flex;
          gap: 10px;
          color: white;
        }
        @media screen and (min-width: 750px) {
          .tech-social__icon-wrapper {
            margin-top: 60px;
            font-size: 14px;
            gap: 20px 50px;
          }
        }
