      "type": "richtext",
      "id": "title",
      "label": "Title",
      "default": "<p><strong>Follow</strong> us on social media and secure some hot deals and always stay up to date!</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Say hello!"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "tl_color",
      "label": "Top left color",
      "default": "#4222de"
    },
    {
