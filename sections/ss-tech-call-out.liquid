<style>
  .tech-social {
    display: flex;
    flex-direction: column;
    color: var(--font-color, #fff);
    align-items: center;
    text-align: center;
  }
  .tech-social__button {
    all: unset;
    cursor: pointer;
    border: 1px solid var(--font-color, #fff);
    border-radius: 21px;
    color: var(--font-color, #fff);
    display: inline-block;
    font-size: 25px;
    padding: 1rem 3rem;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    margin: 40px auto 0;
    display: inline-block;
    width: fit-content;
  }
  @media screen and (min-width: 750px) {
    .tech-social__button {
      margin: 28px 0 0;
    }
  }
  .tech-social__title {
    max-width: 980px;
    width: 90%;
    margin: 0 auto;
  }
  .tech-social__title p {
    font-size: var(--title-font-size-mobile, 25px);
    line-height: 1.25;
    margin: 0;
  }
  @media screen and (min-width: 750px) {
    .tech-social__title p {
      font-size: var(--title-font-size, 40px);
    }
  }
</style>

<style>
  .section-{{ section.id }}-padding {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
    padding-top: var(--pt);
    padding-bottom: var(--pb);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding: 0 5rem;
      padding-top: var(--pt-desktop);
      padding-bottom: var(--pb-desktop);
    }
  }
</style>

<div
  style="
    background: linear-gradient(
      93.9deg,
      var(--tl-color, #4222de) 0%,
      var(--br-color, #a931ee) 101.18%
    );
    --tl-color: {{ section.settings.tl_color }};
    --br-color: {{ section.settings.br_color }};
    --max-width: {{ section.settings.section-width }}rem;
    --pt: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    --pt-desktop: {{ section.settings.padding_top }}px;
    --pb: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    --pb-desktop: {{ section.settings.padding_bottom }}px;
