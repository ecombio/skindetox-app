          {% if block.settings.url != blank %}
            <a
              class="tech-social__icon"
              href="{{ block.settings.url }}"
            >
              {{ block_content }}
            </a>
          {% else %}
            <div class="tech-social__icon">
              {{ block_content }}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      {% if section.settings.image != blank %}
        <img
          class="tech-social__image tech-social__image--desktop"
          src="{{ section.settings.image | img_url: '600x' }}"
          srcset="
            {{ section.settings.image | img_url: '400x' }} 400w,
            {{ section.settings.image | img_url: '600x' }} 600w,
            {{ section.settings.image | img_url: '1200x' }} 1200w,
            {{ section.settings.image | img_url: '1800x' }} 1800w,
            {{ section.settings.image | img_url: 'master' }} 2000w
          "
          alt="{{ section.settings.image.alt | escape }}"
        >
      {% endif %}
    </div>
  </div>
</div>

